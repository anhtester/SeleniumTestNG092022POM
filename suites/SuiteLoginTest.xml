<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Suite Login Test" verbose="1">
    <test name="Login Test on edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="anhtester.com.testcases.LoginTest"/>
            <class name="anhtester.com.testcases.DashboardTest"/>
            <class name="anhtester.com.testcases.CustomersTest"/>
        </classes>
    </test>

    <test name="Login Test on firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="anhtester.com.testcases.LoginTest"/>
        </classes>
    </test>
</suite>